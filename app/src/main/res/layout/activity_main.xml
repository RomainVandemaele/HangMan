<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/fl_main_fl1"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_200" />

        <FrameLayout
            android:id="@+id/fl_main_fl2"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_200" >

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_main_fl3"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_200" />

        <FrameLayout
            android:id="@+id/fl_main_fl4"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_200" />

        <FrameLayout
            android:id="@+id/fl_main_fl5"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_200" />

        <FrameLayout
            android:id="@+id/fl_main_fl6"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_200" />

        <FrameLayout
            android:id="@+id/fl_main_fl7"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_200" />

        <FrameLayout
            android:id="@+id/fl_main_fl8"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_200" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_main_trie"
        android:layout_width="137dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="66dp"
        android:text="@string/nTries"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_main_display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_main_display"
        android:layout_width="173dp"
        android:layout_height="50dp"
        android:layout_marginBottom="55dp"
        android:text="@string/hidden"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/et_main_letter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_trie" />

    <EditText
        android:id="@+id/et_main_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="89dp"
        android:hint="@string/editLette"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btn_main_sendLetter"
        app:layout_constraintStart_toStartOf="@+id/tv_main_display"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_display" />

    <Button
        android:id="@+id/btn_main_sendLetter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="283dp"
        android:text="@string/main_try"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_main_letter" />

    <Button
        android:id="@+id/btn_main_new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="@string/main_new_game"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_sendLetter" />


</androidx.constraintlayout.widget.ConstraintLayout>